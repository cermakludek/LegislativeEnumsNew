@page "/cuzk/soil-ecological-units"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using LegislativeEnumsNew.Data
@using LegislativeEnumsNew.Data.Entities.Cuzk
@attribute [Authorize]
@rendermode InteractiveServer
@inject ApplicationDbContext DbContext

<PageTitle>BPEJ</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-flower1 me-2"></i>
        BPEJ - Bonitovane pudne ekologicke jednotky
    </h1>
</div>

@if (items == null)
{
    <div class="d-flex justify-content-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Nacitani...</span>
        </div>
    </div>
}
else if (!items.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>
        Zadne zaznamy nebyly nalezeny.
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            <span>Celkem zaznamu: @items.Count</span>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Kod</th>
                        <th>Nazev</th>
                        <th>Cena</th>
                        <th>Popis</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in items)
                    {
                        <tr>
                            <td><code>@item.Code</code></td>
                            <td>@item.NameCs</td>
                            <td>@(item.Price?.ToString("N2") ?? "-") Kc/m2</td>
                            <td class="text-muted small">@(item.DescriptionCs ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@code {
    private List<SoilEcologicalUnit>? items;

    protected override async Task OnInitializedAsync()
    {
        items = await DbContext.CuzkSoilEcologicalUnits
            .OrderBy(x => x.Code)
            .ToListAsync();
    }
}
