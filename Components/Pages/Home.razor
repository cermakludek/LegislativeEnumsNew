@page "/"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using LegislativeEnumsNew.Data
@using LegislativeEnumsNew.Data.Entities
@attribute [Authorize]
@inject ApplicationDbContext DbContext

<PageTitle>Legislative Codelists</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-journal-code me-2"></i>
        Přehled číselníků
    </h1>
</div>

@if (codelists == null)
{
    <div class="d-flex justify-content-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Načítání...</span>
        </div>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        @foreach (var codelist in codelists)
        {
            <div class="col">
                <div class="card h-100 codelist-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">
                                <i class="bi @(codelist.IconClass ?? "bi-list") me-2 text-primary"></i>
                                @codelist.NameCs
                            </h5>
                        </div>
                        <p class="card-text text-muted small">@codelist.DescriptionCs</p>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <div class="d-flex gap-2">
                            <a href="@codelist.WebUrl" class="btn btn-outline-primary btn-sm flex-grow-1">
                                <i class="bi bi-eye me-1"></i> Zobrazit
                            </a>
                            <a href="@codelist.ApiUrl" class="btn btn-outline-secondary btn-sm" target="_blank" title="API">
                                <i class="bi bi-code-slash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<CodelistRegistry>? codelists;

    protected override async Task OnInitializedAsync()
    {
        codelists = await DbContext.CodelistRegistry
            .OrderBy(c => c.SortOrder)
            .ToListAsync();
    }
}
