@page "/admin/dashboard"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using LegislativeEnumsNew.Data
@using LegislativeEnumsNew.Data.Entities
@using LegislativeEnumsNew.Resources
@using LegislativeEnumsNew.Services
@attribute [Authorize(Roles = "Admin")]
@rendermode InteractiveServer
@inject DashboardService DashboardService
@inject IStringLocalizer<SharedResource> L
@inject IJSRuntime JSRuntime

<PageTitle>@L["admin.dashboard.title"]</PageTitle>

<style>
    .dashboard-section {
        margin-bottom: 2.5rem;
    }
    .dashboard-section:last-child {
        margin-bottom: 1rem;
    }
    .section-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #495057;
        margin-bottom: 1.25rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #e9ecef;
    }
    .stat-card {
        border: none;
        border-radius: 0.75rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        transition: transform 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }
    .stat-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }
    .stat-card .card-body {
        padding: 1.5rem;
    }
    .stat-card .stat-icon {
        width: 56px;
        height: 56px;
        border-radius: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }
    .stat-card .stat-value {
        font-size: 2rem;
        font-weight: 700;
        line-height: 1.2;
    }
    .stat-card .stat-label {
        font-size: 0.875rem;
        color: #6c757d;
        margin-bottom: 0.25rem;
    }
    .data-card {
        border: none;
        border-radius: 0.75rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
    .data-card .card-header {
        background: #f8f9fa;
        border-bottom: 1px solid #e9ecef;
        padding: 1rem 1.25rem;
        border-radius: 0.75rem 0.75rem 0 0 !important;
    }
    .data-card .card-header h5 {
        font-size: 1rem;
        font-weight: 600;
        margin: 0;
    }
    .data-card .card-body {
        padding: 0;
    }
    .data-card .table {
        margin: 0;
    }
    .data-card .table th {
        font-weight: 600;
        font-size: 0.8125rem;
        text-transform: uppercase;
        letter-spacing: 0.025em;
        color: #6c757d;
        padding: 0.875rem 1rem;
        border-bottom: 2px solid #e9ecef;
    }
    .data-card .table td {
        padding: 0.75rem 1rem;
        vertical-align: middle;
    }
    .empty-state {
        padding: 3rem 1.5rem;
        text-align: center;
        color: #6c757d;
    }
    .empty-state i {
        font-size: 3rem;
        opacity: 0.5;
        margin-bottom: 1rem;
    }
    .activity-item {
        padding: 0.875rem 1.25rem;
        border-bottom: 1px solid #f1f3f4;
        transition: background-color 0.15s;
    }
    .activity-item:hover {
        background-color: #f8f9fa;
    }
    .activity-item:last-child {
        border-bottom: none;
    }
    .card-footer-link {
        display: block;
        padding: 0.875rem 1.25rem;
        text-align: center;
        color: #6c757d;
        text-decoration: none;
        background: #f8f9fa;
        border-top: 1px solid #e9ecef;
        border-radius: 0 0 0.75rem 0.75rem;
        transition: background-color 0.15s, color 0.15s;
    }
    .card-footer-link:hover {
        background: #e9ecef;
        color: #495057;
    }
    @@media (max-width: 767.98px) {
        .stat-card .stat-value {
            font-size: 1.5rem;
        }
        .stat-card .stat-icon {
            width: 48px;
            height: 48px;
            font-size: 1.25rem;
        }
        .section-title {
            font-size: 1rem;
        }
    }
</style>

<!-- Page Header -->
<div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4 pb-2">
    <div class="mb-3 mb-sm-0">
        <h1 class="h3 mb-1">
            <i class="bi bi-speedometer2 me-2 text-primary"></i>
            @L["admin.dashboard.title"]
        </h1>
        <p class="text-muted mb-0 small">Statistiky a monitoring aplikace</p>
    </div>
    <button class="btn btn-outline-primary" @onclick="RefreshData">
        <i class="bi bi-arrow-clockwise me-1"></i> @L["common.refresh"]
    </button>
</div>

@if (stats == null)
{
    <div class="d-flex justify-content-center align-items-center" style="min-height: 400px;">
        <div class="text-center">
            <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">@L["common.loading"]</span>
            </div>
            <p class="text-muted">@L["common.loading"]</p>
        </div>
    </div>
}
else
{
    <!-- Primary Stats Section -->
    <section class="dashboard-section">
        <h2 class="section-title">
            <i class="bi bi-graph-up-arrow me-2"></i>
            Klíčové metriky
        </h2>
        <div class="row g-3 g-lg-4">
            <div class="col-6 col-lg-3">
                <div class="card stat-card bg-primary text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="stat-label text-white-50 mb-1">@L["admin.dashboard.totalUsers"]</p>
                                <p class="stat-value mb-0">@stats.TotalUsers</p>
                            </div>
                            <div class="stat-icon bg-white bg-opacity-25">
                                <i class="bi bi-people text-white"></i>
                            </div>
                        </div>
                    </div>
                    <a href="/admin/users" class="card-footer-link text-white-50 bg-transparent border-0">
                        @L["common.viewAll"] <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="card stat-card bg-success text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="stat-label text-white-50 mb-1">@L["admin.dashboard.activeApiKeys"]</p>
                                <p class="stat-value mb-0">
                                    @stats.ActiveApiKeys
                                    <small class="fs-6 fw-normal opacity-75">/ @stats.TotalApiKeys</small>
                                </p>
                            </div>
                            <div class="stat-icon bg-white bg-opacity-25">
                                <i class="bi bi-key text-white"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="card stat-card bg-info text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="stat-label text-white-50 mb-1">@L["admin.dashboard.requestsToday"]</p>
                                <p class="stat-value mb-0">@stats.RequestsToday</p>
                            </div>
                            <div class="stat-icon bg-white bg-opacity-25">
                                <i class="bi bi-lightning text-white"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="card stat-card bg-warning h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="stat-label mb-1">@L["admin.dashboard.requestsMonth"]</p>
                                <p class="stat-value mb-0">@stats.RequestsMonth</p>
                            </div>
                            <div class="stat-icon bg-dark bg-opacity-10">
                                <i class="bi bi-calendar-check"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Secondary Stats Section -->
    <section class="dashboard-section">
        <h2 class="section-title">
            <i class="bi bi-bar-chart me-2"></i>
            Dodatečné statistiky
        </h2>
        <div class="row g-3 g-lg-4">
            <div class="col-sm-6 col-lg-4">
                <div class="card stat-card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="stat-label mb-1">@L["admin.dashboard.requestsWeek"]</p>
                                <p class="stat-value text-primary mb-0">@stats.RequestsWeek</p>
                            </div>
                            <div class="stat-icon bg-primary bg-opacity-10">
                                <i class="bi bi-calendar-week text-primary"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-4">
                <div class="card stat-card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="stat-label mb-1">@L["admin.dashboard.requestsAllTime"]</p>
                                <p class="stat-value text-success mb-0">@stats.RequestsAllTime</p>
                            </div>
                            <div class="stat-icon bg-success bg-opacity-10">
                                <i class="bi bi-infinity text-success"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-lg-4">
                <div class="card stat-card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="stat-label mb-1">@L["admin.dashboard.codelists"]</p>
                                <p class="stat-value text-info mb-0">@stats.TotalCodelists</p>
                            </div>
                            <div class="stat-icon bg-info bg-opacity-10">
                                <i class="bi bi-journal-code text-info"></i>
                            </div>
                        </div>
                    </div>
                    <a href="/" class="card-footer-link">
                        @L["common.viewAll"] <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Response Format Chart Section -->
    <section class="dashboard-section">
        <h2 class="section-title">
            <i class="bi bi-pie-chart me-2"></i>
            @L["admin.dashboard.responseFormat"]
        </h2>
        <div class="row g-3 g-lg-4">
            <div class="col-lg-6">
                <div class="card data-card h-100">
                    <div class="card-header">
                        <h5>
                            <i class="bi bi-filetype-json me-2 text-warning"></i>
                            JSON vs XML
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        @if (stats.JsonRequestCount + stats.XmlRequestCount > 0)
                        {
                            <div class="chart-container" style="position: relative; height: 280px;">
                                <canvas id="formatPieChart"></canvas>
                            </div>
                            <div class="d-flex justify-content-center gap-4 mt-3">
                                <div class="text-center">
                                    <span class="badge bg-warning fs-6 px-3 py-2">JSON</span>
                                    <p class="mb-0 mt-2 fw-bold fs-5">@stats.JsonRequestCount</p>
                                    <small class="text-muted">@(GetPercentage(stats.JsonRequestCount, stats.JsonRequestCount + stats.XmlRequestCount))%</small>
                                </div>
                                <div class="text-center">
                                    <span class="badge bg-info fs-6 px-3 py-2">XML</span>
                                    <p class="mb-0 mt-2 fw-bold fs-5">@stats.XmlRequestCount</p>
                                    <small class="text-muted">@(GetPercentage(stats.XmlRequestCount, stats.JsonRequestCount + stats.XmlRequestCount))%</small>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <i class="bi bi-pie-chart d-block"></i>
                                <p class="mb-0">@L["common.noData"]</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card data-card h-100">
                    <div class="card-header">
                        <h5>
                            <i class="bi bi-graph-up me-2 text-primary"></i>
                            @L["admin.dashboard.dailyRequests"]
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        @if (stats.DailyStats.Any() && stats.DailyStats.Values.Sum() > 0)
                        {
                            <div class="chart-container" style="position: relative; height: 280px;">
                                <canvas id="dailyBarChart"></canvas>
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <i class="bi bi-bar-chart d-block"></i>
                                <p class="mb-0">@L["common.noData"]</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Top Endpoints & Users Section -->
    <section class="dashboard-section">
        <h2 class="section-title">
            <i class="bi bi-trophy me-2"></i>
            Nejaktivnější
        </h2>
        <div class="row g-3 g-lg-4">
            <div class="col-lg-6">
                <div class="card data-card h-100">
                    <div class="card-header">
                        <h5>
                            <i class="bi bi-lightning-charge me-2 text-warning"></i>
                            @L["admin.dashboard.topEndpoints"]
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (stats.TopEndpoints.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>@L["admin.dashboard.endpoint"]</th>
                                            <th class="text-end" style="width: 100px;">@L["admin.dashboard.requests"]</th>
                                            <th class="text-end" style="width: 100px;">@L["admin.dashboard.avgTime"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var ep in stats.TopEndpoints)
                                        {
                                            <tr>
                                                <td>
                                                    <code class="text-truncate d-inline-block" style="max-width: 250px;">@ep.Endpoint</code>
                                                </td>
                                                <td class="text-end">
                                                    <span class="badge bg-primary rounded-pill">@ep.RequestCount</span>
                                                </td>
                                                <td class="text-end text-muted small">
                                                    @(ep.AvgResponseTimeMs?.ToString("F1") ?? "-") ms
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <i class="bi bi-lightning d-block"></i>
                                <p class="mb-0">@L["common.noData"]</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card data-card h-100">
                    <div class="card-header">
                        <h5>
                            <i class="bi bi-person-check me-2 text-success"></i>
                            @L["admin.dashboard.topUsers"]
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (stats.TopUsers.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>@L["user.username"]</th>
                                            <th class="text-end" style="width: 120px;">@L["admin.dashboard.requests"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var user in stats.TopUsers)
                                        {
                                            <tr>
                                                <td>
                                                    <i class="bi bi-person-circle me-2 text-muted"></i>
                                                    @user.Username
                                                </td>
                                                <td class="text-end">
                                                    <span class="badge bg-success rounded-pill">@user.RequestCount</span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <i class="bi bi-people d-block"></i>
                                <p class="mb-0">@L["common.noData"]</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Recent Activity Section -->
    <section class="dashboard-section">
        <h2 class="section-title">
            <i class="bi bi-activity me-2"></i>
            Nedávná aktivita
        </h2>
        <div class="row g-3 g-lg-4">
            <div class="col-lg-8">
                <div class="card data-card h-100">
                    <div class="card-header d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-2">
                        <h5 class="mb-0">
                            <i class="bi bi-broadcast me-2 text-info"></i>
                            @L["admin.dashboard.recentRequests"]
                        </h5>
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="button" class="btn @(statusFilter == null ? "btn-secondary" : "btn-outline-secondary")" @onclick="@(() => SetStatusFilter(null))">@L["common.all"]</button>
                            <button type="button" class="btn @(statusFilter == "2xx" ? "btn-success" : "btn-outline-success")" @onclick="@(() => SetStatusFilter("2xx"))">2xx</button>
                            <button type="button" class="btn @(statusFilter == "4xx" ? "btn-warning" : "btn-outline-warning")" @onclick="@(() => SetStatusFilter("4xx"))">4xx</button>
                            <button type="button" class="btn @(statusFilter == "5xx" ? "btn-danger" : "btn-outline-danger")" @onclick="@(() => SetStatusFilter("5xx"))">5xx</button>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (FilteredRequests.Any())
                        {
                            <div class="table-responsive" style="max-height: 380px; overflow-y: auto;">
                                <table class="table table-hover table-sm">
                                    <thead class="sticky-top bg-white">
                                        <tr>
                                            <th style="width: 130px;">@L["admin.dashboard.time"]</th>
                                            <th>@L["admin.dashboard.endpoint"]</th>
                                            <th class="d-none d-md-table-cell">@L["user.username"]</th>
                                            <th class="text-center" style="width: 70px;">@L["admin.dashboard.status"]</th>
                                            <th class="text-end d-none d-sm-table-cell" style="width: 90px;">@L["admin.dashboard.responseTime"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var req in FilteredRequests.Take(15))
                                        {
                                            <tr>
                                                <td class="text-muted small">@req.Timestamp.ToString("dd.MM HH:mm:ss")</td>
                                                <td>
                                                    <code class="small text-truncate d-inline-block" style="max-width: 200px;">@req.Endpoint</code>
                                                </td>
                                                <td class="d-none d-md-table-cell small">@req.Username</td>
                                                <td class="text-center">
                                                    <span class="badge @GetStatusBadgeClass(req.ResponseStatus)">
                                                        @(req.ResponseStatus?.ToString() ?? "-")
                                                    </span>
                                                </td>
                                                <td class="text-end text-muted small d-none d-sm-table-cell">
                                                    @(req.ResponseTimeMs?.ToString() ?? "-") ms
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <i class="bi bi-broadcast d-block"></i>
                                <p class="mb-0">@L["common.noData"]</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card data-card h-100">
                    <div class="card-header">
                        <h5>
                            <i class="bi bi-clock-history me-2 text-secondary"></i>
                            @L["admin.dashboard.recentChanges"]
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        @if (stats.RecentAuditLogs.Any())
                        {
                            <div style="max-height: 380px; overflow-y: auto;">
                                @foreach (var audit in stats.RecentAuditLogs)
                                {
                                    <div class="activity-item">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div class="me-2">
                                                <span class="badge @GetChangeTypeBadgeClass(audit.ChangeType) me-1">
                                                    @GetChangeTypeIcon(audit.ChangeType)
                                                </span>
                                                <strong class="small">@audit.EntityType</strong>
                                                <br>
                                                <code class="small text-muted">@audit.EntityCode</code>
                                            </div>
                                            <small class="text-muted text-nowrap">@audit.ChangedAt.ToString("dd.MM HH:mm")</small>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <i class="bi bi-clock-history d-block"></i>
                                <p class="mb-0">@L["admin.dashboard.noChanges"]</p>
                            </div>
                        }
                    </div>
                    <a href="/admin/audit" class="card-footer-link">
                        @L["common.viewAll"] <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- New Users Section -->
    <section class="dashboard-section">
        <h2 class="section-title">
            <i class="bi bi-person-plus me-2"></i>
            @L["user.newUsers"]
        </h2>
        <div class="card data-card">
            <div class="card-body">
                @if (stats.RecentUsers.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>@L["user.username"]</th>
                                    <th class="d-none d-md-table-cell">@L["user.email"]</th>
                                    <th style="width: 120px;">@L["user.role"]</th>
                                    <th class="d-none d-sm-table-cell" style="width: 160px;">@L["common.createdAt"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in stats.RecentUsers)
                                {
                                    <tr>
                                        <td>
                                            <i class="bi bi-person-circle me-2 text-primary"></i>
                                            <strong>@user.UserName</strong>
                                        </td>
                                        <td class="d-none d-md-table-cell text-muted">@user.Email</td>
                                        <td>
                                            <span class="badge @GetRoleBadgeClass(user.Role)">@user.Role</span>
                                        </td>
                                        <td class="d-none d-sm-table-cell text-muted small">@user.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="bi bi-person-plus d-block"></i>
                        <p class="mb-0">@L["user.noNewUsers"]</p>
                    </div>
                }
            </div>
        </div>
    </section>
}

@code {
    private DashboardStats? stats;
    private string? statusFilter;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        stats = await DashboardService.GetDashboardStatsAsync();
    }

    private async Task RefreshData()
    {
        stats = null;
        StateHasChanged();
        await LoadData();
    }

    private void SetStatusFilter(string? filter)
    {
        statusFilter = filter;
    }

    private IEnumerable<RecentRequest> FilteredRequests => stats?.RecentRequests
        .Where(r => statusFilter switch
        {
            "2xx" => r.ResponseStatus >= 200 && r.ResponseStatus < 300,
            "4xx" => r.ResponseStatus >= 400 && r.ResponseStatus < 500,
            "5xx" => r.ResponseStatus >= 500,
            _ => true
        }) ?? Enumerable.Empty<RecentRequest>();

    private string GetStatusBadgeClass(int? status) => status switch
    {
        >= 200 and < 300 => "bg-success",
        >= 300 and < 400 => "bg-info",
        >= 400 and < 500 => "bg-warning text-dark",
        >= 500 => "bg-danger",
        _ => "bg-secondary"
    };

    private string GetChangeTypeBadgeClass(ChangeType changeType) => changeType switch
    {
        ChangeType.Create => "bg-success",
        ChangeType.Update => "bg-info",
        ChangeType.Delete => "bg-danger",
        _ => "bg-secondary"
    };

    private string GetChangeTypeIcon(ChangeType changeType) => changeType switch
    {
        ChangeType.Create => "+",
        ChangeType.Update => "~",
        ChangeType.Delete => "-",
        _ => "?"
    };

    private string GetRoleBadgeClass(UserRole role) => role switch
    {
        UserRole.Admin => "bg-danger",
        UserRole.Contributor => "bg-primary",
        UserRole.Reader => "bg-secondary",
        _ => "bg-secondary"
    };

    private string GetPercentage(int value, int total)
    {
        if (total == 0) return "0";
        return ((double)value / total * 100).ToString("F1");
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (stats != null && (stats.JsonRequestCount + stats.XmlRequestCount > 0 || stats.DailyStats.Values.Sum() > 0))
        {
            await RenderChartsAsync();
        }
    }

    private async Task RenderChartsAsync()
    {
        try
        {
            // Render pie chart
            if (stats!.JsonRequestCount + stats.XmlRequestCount > 0)
            {
                await JSRuntime.InvokeVoidAsync("renderPieChart",
                    "formatPieChart",
                    stats.JsonRequestCount,
                    stats.XmlRequestCount);
            }

            // Render bar chart
            if (stats.DailyStats.Any() && stats.DailyStats.Values.Sum() > 0)
            {
                var labels = stats.DailyStats.Keys.TakeLast(14).ToArray();
                var values = stats.DailyStats.Values.TakeLast(14).ToArray();
                await JSRuntime.InvokeVoidAsync("renderBarChart",
                    "dailyBarChart",
                    labels,
                    values);
            }
        }
        catch (Exception)
        {
            // Chart.js might not be loaded yet
        }
    }
