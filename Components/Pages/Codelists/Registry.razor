@page "/codelists/admin"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using LegislativeEnumsNew.Data
@using LegislativeEnumsNew.Data.Entities
@attribute [Authorize(Roles = "Admin,Contributor")]
@rendermode InteractiveServer
@inject ApplicationDbContext DbContext

<PageTitle>Registr číselníků</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-journal-code me-2"></i>
        Registr číselníků
    </h1>
    <AuthorizeView Roles="Admin">
        <a href="/codelists/admin/create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Přidat číselník
        </a>
    </AuthorizeView>
</div>

@if (items == null)
{
    <div class="d-flex justify-content-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Načítání...</span>
        </div>
    </div>
}
else if (!items.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>
        Žádné číselníky nebyly nalezeny.
    </div>
}
else
{
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 50px;"></th>
                        <th>Kód</th>
                        <th>Název</th>
                        <th>Web URL</th>
                        <th>API URL</th>
                        <th class="text-end">Akce</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in items)
                    {
                        <tr>
                            <td class="text-center">
                                <i class="bi @(item.IconClass ?? "bi-list") fs-5"></i>
                            </td>
                            <td><code>@item.Code</code></td>
                            <td>@item.NameCs</td>
                            <td>
                                <a href="@item.WebUrl" class="text-decoration-none">
                                    @item.WebUrl
                                </a>
                            </td>
                            <td>
                                <a href="@item.ApiUrl" target="_blank" class="text-decoration-none">
                                    @item.ApiUrl
                                </a>
                            </td>
                            <td class="text-end">
                                <a href="@item.WebUrl" class="btn btn-sm btn-outline-primary" title="Otevřít">
                                    <i class="bi bi-box-arrow-up-right"></i>
                                </a>
                                <AuthorizeView Roles="Admin">
                                    <a href="/codelists/admin/@item.Id/edit" class="btn btn-sm btn-outline-secondary" title="Upravit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    @if (deleteConfirmId == item.Id)
                                    {
                                        <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(item.Id)">
                                            <i class="bi bi-check-lg"></i>
                                        </button>
                                        <button class="btn btn-sm btn-secondary" @onclick="CancelDelete">
                                            <i class="bi bi-x-lg"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-danger" title="Smazat" @onclick="() => RequestDelete(item.Id)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    }
                                </AuthorizeView>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@code {
    private List<CodelistRegistry>? items;
    private long? deleteConfirmId;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        items = await DbContext.CodelistRegistry
            .OrderBy(c => c.SortOrder)
            .ThenBy(c => c.NameCs)
            .ToListAsync();
    }

    private void RequestDelete(long id)
    {
        deleteConfirmId = id;
    }

    private void CancelDelete()
    {
        deleteConfirmId = null;
    }

    private async Task ConfirmDelete(long id)
    {
        var item = await DbContext.CodelistRegistry.FindAsync(id);
        if (item != null)
        {
            DbContext.CodelistRegistry.Remove(item);
            await DbContext.SaveChangesAsync();
            await LoadData();
        }
        deleteConfirmId = null;
    }
}
