@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.Extensions.Localization
@using LegislativeEnumsNew.Data
@using LegislativeEnumsNew.Resources
@using LegislativeEnumsNew.Components.Shared
@inject IStringLocalizer<SharedResource> L

<nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
    <div class="container-fluid px-3">
        <a class="navbar-brand d-flex align-items-center" href="/">
            <i class="bi bi-journal-code me-2"></i>
            <span>@L["app.title"]</span>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <AuthorizeView Context="authContext">
                <Authorized>
                    <ul class="navbar-nav me-auto ms-4">
                        <AuthorizeView Roles="Admin,Contributor" Context="registryContext">
                            <li class="nav-item">
                                <a class="nav-link" href="/codelists/admin">
                                    <i class="bi bi-gear me-1"></i> @L["nav.registry"]
                                </a>
                            </li>
                        </AuthorizeView>
                        <AuthorizeView Roles="Admin" Context="adminContext">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-shield-lock me-1"></i> @L["nav.admin"]
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" href="/admin/dashboard">
                                            <i class="bi bi-speedometer2 me-2"></i> @L["nav.dashboard"]
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/admin/users">
                                            <i class="bi bi-people me-2"></i> @L["nav.users"]
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/admin/flags">
                                            <i class="bi bi-tags me-2"></i> @L["nav.flags"]
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="/admin/audit">
                                            <i class="bi bi-journal-text me-2"></i> @L["nav.audit"]
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </AuthorizeView>
                    </ul>

                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" href="/swagger" target="_blank" title="API Documentation">
                                <i class="bi bi-file-earmark-code me-1"></i> API
                            </a>
                        </li>

                        <NotificationDropdown />

                        <li class="nav-item">
                            <CultureSelector />
                        </li>

                        <li class="nav-divider d-none d-lg-block"></li>

                        <li class="nav-item dropdown user-dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i>
                                <span class="d-none d-md-inline">@authContext.User.Identity?.Name</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li class="px-3 py-2 text-muted small d-md-none">
                                    <i class="bi bi-person me-1"></i> @authContext.User.Identity?.Name
                                </li>
                                <li class="d-md-none"><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="/Account/Manage">
                                        <i class="bi bi-person-gear me-2"></i> @L["nav.profile"]
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form action="/Account/Logout" method="post">
                                        <AntiforgeryToken />
                                        <input type="hidden" name="ReturnUrl" value="/" />
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right me-2"></i> @L["nav.logout"]
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </Authorized>
                <NotAuthorized>
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item">
                            <CultureSelector />
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i> @L["nav.login"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Register">
                                <i class="bi bi-person-plus me-1"></i> @L["nav.register"]
                            </a>
                        </li>
                    </ul>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</nav>

<div class="container mt-4">
    @Body
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">ðŸ—™</span>
</div>
